<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:sf="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:m="sap.m"
    xmlns:u="sap.ui.unified"
    height="100%"
    displayBlock="true"
    controllerName="dev.cursos.app.home.Home"
>
    <ObjectPageLayout
        showAnchorBarPopover="false"
        enableLazyLoading="false"
        showTitleInHeaderContent="true"
        showEditHeaderButton="true"
        showFooter="true"
        editHeaderButtonPress="handleEditBtnPress">
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <expandedHeading>
                    <m:HBox>
                        <m:VBox justifyContent="Center"
                            class="sapUiSmallMarginEnd">
                            <m:Text text="Institucional" />
                        </m:VBox>
                        <m:VBox justifyContent="Center"
                            class="sapUiSmallMarginEnd">
                            <m:Text text="Escolas" />
                        </m:VBox>
                        <m:VBox justifyContent="Center"
                            class="sapUiSmallMarginEnd">
                            <m:Text text="Eventos e Notícias" />
                        </m:VBox>
                        <m:VBox justifyContent="Center"
                            class="sapUiSmallMarginEnd">
                            <m:Text text="Biblioteca" />
                        </m:VBox>
                        <m:VBox justifyContent="Center"
                            class="sapUiSmallMarginEnd">
                            <m:Text text="Bolsas e Financiamentos" />
                        </m:VBox>
                        <m:VBox justifyContent="Center"
                            class="sapUiSmallMarginEnd">
                            <m:Text text="Serviços" />
                        </m:VBox>
                    </m:HBox>
                </expandedHeading>

                <snappedHeading>
                    <m:HBox>
                        <m:VBox
                            justifyContent="Center"
                            class="sapUiSmallMarginEnd">
                            <m:Image
                                src="{/svgLogo}"
                                height="{/imageHeight}" />
                        </m:VBox>
                        <m:VBox
                            justifyContent="Center"
                            class="sapUiSmallMarginEnd">
                            <m:ObjectIdentifier title="{i18n>Home.Graduacao}"
                                active="false" />
                        </m:VBox>
                        <m:VBox
                            justifyContent="Center"
                            class="sapUiSmallMarginEnd">
                            <m:ObjectIdentifier title="{i18n>Home.PosGraguacao}"
                                active="false" />
                        </m:VBox>
                        <m:VBox
                            justifyContent="Center"
                            class="sapUiSmallMarginEnd">
                            <m:ObjectIdentifier title="{i18n>Home.PesquisaEInovacao}"
                                active="false" />
                        </m:VBox>
                        <m:VBox
                            justifyContent="Center"
                            class="sapUiSmallMarginEnd">
                            <m:ObjectIdentifier title="{i18n>Home.Extensao}"
                                active="false" />
                        </m:VBox>
                    </m:HBox>
                </snappedHeading>

                <actions>
                    <m:VBox justifyContent="Center"
                        class="sapUiSmallMarginEnd">
                        <m:Link
                            text="{i18n>Home.Atendimento}" />
                    </m:VBox>
                    <m:VBox justifyContent="Center"
                        class="sapUiSmallMarginEnd">
                        <m:Link
                            text="{i18n>Home.SOL}" />
                    </m:VBox>
                    <m:VBox justifyContent="Center"
                        class="sapUiSmallMarginEnd">
                        <ObjectPageHeaderActionButton
                            press="irParaLista"
                            icon="sap-icon://email"
                            tooltip="{i18n>Home.Email}"
                            type="Default" />
                    </m:VBox>
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:HBox>
                <m:VBox
                    justifyContent="Center"
                    class="sapUiSmallMarginEnd">
                    <m:Image
                        src="{/svgLogo}"
                        height="{/imageHeight}" />
                </m:VBox>
                <m:VBox
                    justifyContent="Center"
                    class="sapUiSmallMarginEnd">
                    <m:ObjectIdentifier title="{i18n>Home.Graduacao}"
                        active="false" />
                </m:VBox>
                <m:VBox
                    justifyContent="Center"
                    class="sapUiSmallMarginEnd">
                    <m:ObjectIdentifier title="{i18n>Home.PosGraguacao}"
                        active="false" />
                </m:VBox>
                <m:VBox
                    justifyContent="Center"
                    class="sapUiSmallMarginEnd">
                    <m:ObjectIdentifier title="{i18n>Home.PesquisaEInovacao}"
                        active="false" />
                </m:VBox>
                <m:VBox
                    justifyContent="Center"
                    class="sapUiSmallMarginEnd">
                    <m:ObjectIdentifier title="{i18n>Home.Extensao}"
                        active="false" />
                </m:VBox>
            </m:HBox>
        </headerContent>

        <sections>
            <ObjectPageSection title="{i18n>Home.AreaDeAcesso}" titleUppercase="true">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <l:VerticalLayout
                                width="100%">
                                <l:Grid
                                    containerQuery="true"
                                    defaultSpan="XL4 L4 M12 S12">
                                    <sf:Card>
                                        <sf:header>
                                            <card:Header
                                                iconDisplayShape="Square"
                                                iconBackgroundColor="Accent7"
                                                iconSize="XL"
                                                title="{i18n>Home.SouAluno}"
                                                subtitle="{i18n>Home.SouAlunoDescricao}"
                                                iconSrc="sap-icon://study-leave" />
                                        </sf:header>
                                        <sf:content>
                                            <m:HBox justifyContent="End" width="100%">
                                                <m:Button
                                                    press="aoClicarEmEntar"
                                                    text="Acessar"
                                                    type="Transparent"
                                                    class="sapUiSmallMarginEnd" />
                                            </m:HBox>
                                        </sf:content>
                                    </sf:Card>
                                    <sf:Card>
                                        <sf:header>
                                            <card:Header
                                                iconDisplayShape="Square"
                                                iconBackgroundColor="Accent6"
                                                iconSize="XL"
                                                title="{i18n>Home.SouProfessor}"
                                                subtitle="{i18n>Home.SouProfessorDescricao}"
                                                iconSrc="sap-icon://education" />
                                        </sf:header>
                                        <sf:content>
                                            <m:HBox justifyContent="End" width="100%">
                                                <m:Button
                                                    press=""
                                                    text="Acessar"
                                                    type="Transparent"
                                                    class="sapUiSmallMarginEnd" />
                                            </m:HBox>
                                        </sf:content>
                                    </sf:Card>
                                    <sf:Card>
                                        <sf:header>
                                            <card:Header
                                                iconDisplayShape="Square"
                                                iconBackgroundColor="Accent5"
                                                iconSize="XL"
                                                title="{i18n>Home.SouFuncionario}"
                                                subtitle="{i18n>Home.SouFuncionarioDescricao}"
                                                iconSrc="sap-icon://employee" />
                                        </sf:header>
                                        <sf:content>
                                            <m:HBox justifyContent="End" width="100%">
                                                <m:Button
                                                    press=""
                                                    text="Acessar"
                                                    type="Transparent"
                                                    class="sapUiSmallMarginEnd" />
                                            </m:HBox>
                                        </sf:content>
                                    </sf:Card>
                                </l:Grid>
                            </l:VerticalLayout>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <ObjectPageSection title="{i18n>Home.OutrosServicos}" titleUppercase="true"
                class="sapUiLargeMarginTop">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <l:Grid
                                width="100%"
                                containerQuery="true"
                                defaultSpan="XL4 L4 M12 S12">
                                <sf:Card>
                                    <sf:header>
                                        <card:Header
                                            iconDisplayShape="Square"
                                            iconBackgroundColor="Transparent"
                                            iconSize="XL"
                                            title="{i18n>Home.CalendarioAcademico}"
                                            subtitle="{i18n>Home.CalendarioAcademicoDescricao}"
                                            iconSrc="sap-icon://calendar" />
                                    </sf:header>
                                    <sf:content>
                                        <m:HBox justifyContent="End" width="100%">
                                            <m:Button
                                                press=""
                                                text="Acessar"
                                                type="Transparent"
                                                class="sapUiSmallMarginEnd" />
                                        </m:HBox>
                                    </sf:content>
                                </sf:Card>
                                <sf:Card>
                                    <sf:header>
                                        <card:Header
                                            iconDisplayShape="Square"
                                            iconBackgroundColor="Transparent"
                                            iconSize="XL"
                                            title="{i18n>Home.CestaDeServicos}"
                                            subtitle="{i18n>Home.CestaDeServicosDescricao}"
                                            iconSrc="sap-icon://education" />
                                    </sf:header>
                                    <sf:content>
                                        <m:HBox justifyContent="End" width="100%">
                                            <m:Button
                                                press=""
                                                text="Acessar"
                                                type="Transparent"
                                                class="sapUiSmallMarginEnd" />
                                        </m:HBox>
                                    </sf:content>
                                </sf:Card>
                                <sf:Card>
                                    <sf:header>
                                        <card:Header
                                            iconDisplayShape="Square"
                                            iconBackgroundColor="Transparent"
                                            iconSize="XL"
                                            title="{i18n>Home.EditaisAcademicos}"
                                            subtitle="{i18n>Home.EditaisAcademicosDescricao}"
                                            iconSrc="sap-icon://document" />
                                    </sf:header>
                                    <sf:content>
                                        <m:HBox justifyContent="End" width="100%">
                                            <m:Button
                                                press=""
                                                text="Acessar"
                                                type="Transparent"
                                                class="sapUiSmallMarginEnd" />
                                        </m:HBox>
                                    </sf:content>
                                </sf:Card>
                            </l:Grid>
                        </blocks>
                    </ObjectPageSubSection>

                    <ObjectPageSubSection>
                        <blocks>
                            <l:Grid
                                width="100%"
                                containerQuery="true"
                                defaultSpan="XL4 L4 M12 S12">
                                <sf:Card>
                                    <sf:header>
                                        <card:Header
                                            iconDisplayShape="Square"
                                            iconBackgroundColor="Transparent"
                                            iconSize="XL"
                                            title="{i18n>Home.Certificados}"
                                            subtitle="{i18n>Home.CertificadosDescricao}"
                                            iconSrc="sap-icon://validate" />
                                    </sf:header>
                                    <sf:content>
                                        <m:HBox justifyContent="End" width="100%">
                                            <m:Button
                                                press=""
                                                text="Acessar"
                                                type="Transparent"
                                                class="sapUiSmallMarginEnd" />
                                        </m:HBox>
                                    </sf:content>
                                </sf:Card>
                                <sf:Card>
                                    <sf:header>
                                        <card:Header
                                            iconDisplayShape="Square"
                                            iconBackgroundColor="Transparent"
                                            iconSize="XL"
                                            title="{i18n>Home.EstagioMonitoriaEgressosEEmpresasJuniores}"
                                            subtitle="{i18n>Home.EstagioMonitoriaEgressosEEmpresasJunioresDescricao}"
                                            iconSrc="sap-icon://database" />
                                    </sf:header>
                                    <sf:content>
                                        <m:HBox justifyContent="End" width="100%">
                                            <m:Button
                                                press=""
                                                text="Acessar"
                                                type="Transparent"
                                                class="sapUiSmallMarginEnd" />
                                        </m:HBox>
                                    </sf:content>
                                </sf:Card>
                                <sf:Card>
                                    <sf:header>
                                        <card:Header
                                            iconDisplayShape="Square"
                                            iconBackgroundColor="Transparent"
                                            iconSize="XL"
                                            title="{i18n>Home.EmailInstitucional}"
                                            subtitle="{i18n>Home.EmailInstitucionalDescricao}"
                                            iconSrc="sap-icon://email" />
                                    </sf:header>
                                    <sf:content>
                                        <m:HBox justifyContent="End" width="100%">
                                            <m:Button
                                                press=""
                                                text="Acessar"
                                                type="Transparent"
                                                class="sapUiSmallMarginEnd" />
                                        </m:HBox>
                                    </sf:content>
                                </sf:Card>
                            </l:Grid>
                        </blocks>

                    </ObjectPageSubSection>

                    <ObjectPageSubSection>
                        <blocks>
                            <l:Grid
                                width="100%"
                                containerQuery="true"
                                defaultSpan="XL4 L4 M12 S12">
                                <sf:Card>
                                    <sf:header>
                                        <card:Header
                                            iconDisplayShape="Square"
                                            iconBackgroundColor="Transparent"
                                            iconSize="XL"
                                            title="{i18n>Home.Office365}"
                                            subtitle="{i18n>Home.Office365Descricao}"
                                            iconSrc="sap-icon://excel-attachment" />
                                    </sf:header>
                                    <sf:content>
                                        <m:HBox justifyContent="End" width="100%">
                                            <m:Button
                                                press=""
                                                text="Acessar"
                                                type="Transparent"
                                                class="sapUiSmallMarginEnd" />
                                        </m:HBox>
                                    </sf:content>
                                </sf:Card>
                                <sf:Card>
                                    <sf:header>
                                        <card:Header
                                            iconDisplayShape="Square"
                                            iconBackgroundColor="Transparent"
                                            iconSize="XL"
                                            title="{i18n>Home.colacoesDeGrau}"
                                            subtitle="{i18n>Home.colacoesDeGrauDescricao}"
                                            iconSrc="sap-icon://study-leave" />
                                    </sf:header>
                                    <sf:content>
                                        <m:HBox justifyContent="End" width="100%">
                                            <m:Button
                                                press=""
                                                text="Acessar"
                                                type="Transparent"
                                                class="sapUiSmallMarginEnd" />
                                        </m:HBox>
                                    </sf:content>
                                </sf:Card>
                                <sf:Card>
                                    <sf:header>
                                        <card:Header
                                            iconDisplayShape="Square"
                                            iconBackgroundColor="Transparent"
                                            iconSize="XL"
                                            title="{i18n>Home.IdentidadeVisual}"
                                            subtitle="{i18n>Home.IdentidadeVisualDescricao}"
                                            iconSrc="sap-icon://picture" />
                                    </sf:header>
                                    <sf:content>
                                        <m:HBox justifyContent="End" width="100%">
                                            <m:Button
                                                press=""
                                                text="Acessar"
                                                type="Transparent"
                                                class="sapUiSmallMarginEnd" />
                                        </m:HBox>
                                    </sf:content>
                                </sf:Card>
                            </l:Grid>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>